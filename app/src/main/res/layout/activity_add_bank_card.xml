<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/public_color_F5F5F5"
    tools:context=".ui.SeckillActivity">

    <com.powerrich.common.widget.TitleBar
        android:id="@+id/mTitleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_default_height"
        app:publicTitle="添加银行卡"
        />

    <TextView

        android:paddingLeft="13dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="请输入银行卡信息"
        android:textColor="#ff999999"
        android:textSize="14sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FCFBF9"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="持卡人姓名"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            />

        <com.power.fresh.widget.DeletableEditText
            android:id="@+id/et_name"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffaaaaaa"
            android:textSize="14sp"
            android:layout_marginLeft="112dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:hint="请输入持卡人姓名"
            android:background="@null"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#eeeeee"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:background="#FCFBF9"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行卡卡号"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            />

        <com.power.fresh.widget.DeletableEditText
            android:id="@+id/et_bank_card_no"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffaaaaaa"
            android:textSize="14sp"
            android:layout_marginLeft="112dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:hint="请输入银行卡卡号"
            android:background="@null"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#eeeeee"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_select_bank"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FCFBF9"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_select_bank"
            android:drawablePadding="3dp"
            android:drawableRight="@mipmap/home_more_next"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffaaaaaa"
            android:textSize="14sp"
            android:layout_marginLeft="112dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:hint="请选择银行"
            android:background="@null"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#eeeeee"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:background="#FCFBF9"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开户行"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            />

        <com.power.fresh.widget.DeletableEditText
              android:id="@+id/et_branch_name"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffaaaaaa"
            android:textSize="14sp"
            android:layout_marginLeft="112dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:hint="请输入开户行名称"
            android:background="@null"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#eeeeee"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FCFBF9"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预留手机号"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            />

        <com.power.fresh.widget.DeletableEditText
            android:id="@+id/et_mobile"
            android:inputType="phone"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffaaaaaa"
            android:textSize="14sp"
            android:layout_marginLeft="112dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:hint="请输入预留手机号"
            android:background="@null"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#eeeeee"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FCFBF9"
        android:layout_marginTop="8dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置默认"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            />

        <CheckBox
            android:id="@+id/cb_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            />
    </RelativeLayout>



    <Button
        android:id="@+id/btn_add"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="21dp"
        android:text="确认添加" />


</LinearLayout>