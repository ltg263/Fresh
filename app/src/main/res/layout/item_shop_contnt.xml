<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_commodity"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/image_view_bg_radius_selector"
            android:src="@mipmap/bg_login" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- -"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#0f0e0e"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_simpleinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- -"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#9c9c9c"
                android:textSize="9sp" />


       <!--     app:bl_corners_radius="8dp"
            app:bl_stroke_width="1dp"
            app:bl_stroke_color="#FF5661"
            android:paddingLeft="5dp"-->

            <com.noober.background.view.BLTextView
                android:id="@+id/tv_activity"
                android:layout_marginTop="5dp"
                android:lines="1"
                android:ellipsize="end"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动特价"
                android:textColor="#ff5661"
                android:textSize="10sp"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_yuanjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥- -  "
                    android:textColor="#e71f19"
                    android:textSize="10sp"
                    android:lines="1"
                    android:ellipsize="end"
                    />

                <TextView
                    android:id="@+id/tv_old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥- -  "
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="12dp"
                    android:textColor="#ff9a9a9a"
                    android:textSize="8sp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="15dp"

          >

            <com.power.fresh.widget.Addand
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>