<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.powerrich.common.widget.TitleBar
        android:id="@+id/mTitleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_default_height"
        app:publicBgColor="@color/app_main_body"
        app:publicShowLeft="true"
        app:publicTextColor="@color/public_white"
        app:publicTitle="@string/activity_customer_service_refund_title" />

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <LinearLayout
          android:layout_width="match_parent"

          android:layout_height="match_parent"
          android:background="#F5F5F5"
          android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/picture_color_white"
              android:orientation="horizontal"
              android:padding="10dp">


              <ImageView
                  android:id="@+id/iv_goods_icon"
                  android:layout_width="66dp"
                  android:layout_height="66dp"

                  android:background="@drawable/image_view_bg_radius_selector"
                  android:scaleType="fitXY"
                  android:src="@mipmap/app_icon" />

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="12dp"
                  android:layout_weight="1"
                  android:orientation="vertical">

                  <TextView
                      android:id="@+id/tv_goods_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="香梨"
                      android:textColor="@color/public_black"
                      android:textSize="@dimen/public_font_16sp" />

                  <TextView
                      android:id="@+id/tv_goods_desc"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:maxLines="2"
                      android:text="规格： 500g"
                      android:textColor="@color/public_color_999999"
                      android:textSize="@dimen/public_font_14sp" />

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="bottom"
                      android:layout_weight="1"
                      android:gravity="bottom"
                      android:orientation="horizontal">

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="规格:"
                          android:textColor="#626061"
                          android:textSize="@dimen/public_font_14sp"
                          android:visibility="gone" />

                      <TextView
                          android:id="@+id/tv_goods_price"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"

                          android:text="¥30.00" />
                  </LinearLayout>

              </LinearLayout>

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginTop="4dp"
                  android:layout_marginRight="15dp"
                  android:orientation="vertical">


                  <TextView
                      android:id="@+id/tv_goods_num_value"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_marginRight="1dp"
                      android:layout_weight="1"
                      android:gravity="bottom"
                      android:text="X1" />

              </LinearLayout>


          </LinearLayout>


          <LinearLayout
              android:id="@+id/ll_reson"
              android:layout_width="match_parent"
              android:layout_height="44dp"
              android:layout_marginTop="10dp"
              android:background="@color/picture_color_white"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="15dp"
              android:paddingRight="15dp">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="退款原因"
                  android:textColor="@color/public_color_333333"
                  android:textSize="@dimen/public_font_14sp" />

              <TextView
                  android:id="@+id/tv_reson_value"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawableRight="@mipmap/icon_shopping_cart_store_next"
                  android:drawablePadding="8dp"
                  android:text="请选择"
                  android:textColor="@color/public_color_333333"
                  android:textSize="@dimen/public_font_14sp" />
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="44dp"
              android:layout_marginTop="10dp"
              android:background="@color/picture_color_white"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="15dp"
              android:paddingRight="15dp">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="退款数量"
                  android:textColor="@color/public_color_333333"
                  android:textSize="@dimen/public_font_14sp" />

              <TextView
                  android:id="@+id/tv_num_value"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawablePadding="8dp"
                  android:text=""
                  android:textColor="@color/public_red"
                  android:textSize="@dimen/public_font_14sp" />
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="44dp"
              android:layout_marginTop="10dp"
              android:background="@color/picture_color_white"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="15dp"
              android:paddingRight="15dp">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="退款金额"
                  android:textColor="@color/public_color_333333"
                  android:textSize="@dimen/public_font_14sp" />

              <TextView
                  android:id="@+id/tv_price_value"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawablePadding="8dp"
                  android:text=""
                  android:textColor="@color/public_red"
                  android:textSize="@dimen/public_font_14sp" />
          </LinearLayout>


          <LinearLayout
              android:id="@+id/ll_mode"
              android:layout_width="match_parent"
              android:layout_height="44dp"
              android:layout_marginTop="10dp"
              android:background="@color/picture_color_white"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="15dp"
              android:paddingRight="15dp">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="退款方式"
                  android:textColor="@color/public_color_333333"
                  android:textSize="@dimen/public_font_14sp" />

              <TextView
                  android:id="@+id/tv_mode_value"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawableRight="@mipmap/icon_shopping_cart_store_next"
                  android:drawablePadding="8dp"
                  android:text="请选择"
                  android:textColor="@color/public_color_333333"
                  android:textSize="@dimen/public_font_14sp" />
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:background="@color/picture_color_white"
              android:orientation="vertical"
              android:padding="15dp">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="退款说明"
                  android:textColor="@color/public_color_333333"
                  android:textSize="@dimen/public_font_14sp" />


              <EditText
                  android:id="@+id/et_reson_value"
                  android:layout_marginTop="10dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/public_white"
                  android:gravity="left"
                  android:hint="请输入退款说明(选填)"
                  android:minHeight="100dp"
                  android:textColor="@color/public_black"
                  android:textColorHint="#999999"
                  android:textSize="@dimen/public_font_14sp" />


          </LinearLayout>


          <LinearLayout
              android:layout_marginTop="10dp"
              android:background="@color/picture_color_white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              >



              <TextView
                  android:id="@+id/textView3XG"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="16dp"
                  android:layout_marginTop="16dp"
                  android:text="上传凭证"
                  android:textColor="#ff202220"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" />


              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rv_certificate"
                  android:layout_margin="5dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/public_white"
                  android:nestedScrollingEnabled="false" />



              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="13dp"
                  android:text="最多可上传3张图片，请尽量保证图片清晰可见"
                  android:textColor="#c4c4c4"
                  android:textSize="11sp"
                  android:layout_marginStart="16dp"
                  android:layout_marginTop="16dp"/>


          </LinearLayout>

          <Button
              android:id="@+id/btn_commit"
              style="@style/ButtonStyle"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:layout_marginTop="21dp"
              android:layout_marginLeft="31dp"
              android:layout_marginRight="31dp"
              android:layout_marginBottom="20dp"
              android:text="提交申请" />


      </LinearLayout>

  </ScrollView>


</LinearLayout>