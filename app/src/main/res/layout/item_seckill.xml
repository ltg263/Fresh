<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="146dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="32dp"
            android:src="@mipmap/home_cc" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="卷心菜"
                android:textColor="#ff0f0e0e"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_simple_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="营养健康  绿色无污染"
                android:textColor="#ff9c9c9c"
                android:textSize="12sp" />


            <com.power.fresh.widget.ProgressView
                android:id="@+id/pv"
                android:layout_width="94dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="¥5.50  /500g"
                android:textColor="#ffe71f19"
                android:textSize="12sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/seckill_item_selector"
                android:lineSpacingExtra="3dp"
                android:enabled="false"
                android:gravity="center"
                android:text="立即抢\n都放假了"
                android:textColor="@color/public_white" />
        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/public_color_eeeeee" />

</RelativeLayout>
