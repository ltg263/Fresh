<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


   <LinearLayout
       android:layout_marginTop="@dimen/title_bar_default_height"
       android:orientation="vertical"
       android:layout_width="match_parent"

       android:layout_height="match_parent">
       <LinearLayout
           android:paddingLeft="15dp"
           android:paddingRight="15dp"
           android:layout_width="match_parent"
           android:layout_height="44dp"
           android:gravity="center_vertical"
           android:orientation="horizontal">

           <TextView
               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="退款原因"
               android:textColor="@color/public_color_333333"
               android:textSize="@dimen/public_font_14sp" />

           <TextView
               android:drawablePadding="8dp"
               android:drawableRight="@mipmap/icon_shopping_cart_store_next"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="请选择"
               android:textColor="@color/public_color_333333"
               android:textSize="@dimen/public_font_14sp" />
       </LinearLayout>

       <View
           android:layout_width="match_parent"
           android:layout_height="10dp"
           android:background="#DDDDDD" />

       <LinearLayout
           android:paddingLeft="15dp"
           android:paddingRight="15dp"
           android:layout_width="match_parent"
           android:layout_height="44dp"
           android:gravity="center_vertical"
           android:orientation="horizontal">

           <TextView
               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="退款金额"
               android:textColor="@color/public_color_333333"
               android:textSize="@dimen/public_font_14sp" />

           <TextView
               android:drawablePadding="8dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="￥12.8"
               android:textColor="@color/public_red"
               android:textSize="@dimen/public_font_14sp" />
       </LinearLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="10dp"
           android:background="#DDDDDD" />
       <LinearLayout
           android:paddingLeft="15dp"
           android:paddingRight="15dp"
           android:layout_width="match_parent"
           android:layout_height="44dp"
           android:gravity="center_vertical"
           android:orientation="horizontal">

           <TextView
               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="退款说明"
               android:textColor="@color/public_color_333333"
               android:textSize="@dimen/public_font_14sp" />

           <TextView
               android:drawablePadding="8dp"
               android:drawableRight="@mipmap/icon_shopping_cart_store_next"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="请选择"
               android:textColor="@color/public_color_333333"
               android:textSize="@dimen/public_font_14sp" />
       </LinearLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="10dp"
           android:background="#DDDDDD" />
   </LinearLayout>

    <com.powerrich.common.widget.TitleBar
        android:id="@+id/mTitleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_default_height"
        android:layout_alignParentTop="true"
        app:publicBgColor="@color/app_main_body"
        app:publicShowLeft="true"
        app:publicTextColor="@color/public_white"
        app:publicTitle="@string/activity_customer_service_refund_title" />
</RelativeLayout>