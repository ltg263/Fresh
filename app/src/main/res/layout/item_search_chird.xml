<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="home_shop_chird"
            type="com.power.fresh.bean.home.HomeMerchant.ListBean.AppCommodityDTOSBean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:clickable="false"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_serch_chird"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@{home_shop_chird.name,default=111}"
            android:textColor="#ff666666"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_activitySalePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Â¥- -"
            android:textColor="#ffff5661"
            android:textSize="13sp" />


    </LinearLayout>
</layout>
