<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ShopQRCodeActivity">



    <com.powerrich.common.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:publicTitle="店铺二维码"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="465dp"
        android:orientation="vertical"
        android:layout_marginLeft="15.5dp"
        android:layout_marginRight="14.5dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/shop_qr_bg"
        >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="68dp"
            android:layout_width="179dp"
            android:layout_height="179dp"
            android:scaleType="fitXY"

            />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="128dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff020202"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/tv_youhui"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请好友享优惠"
            android:textColor="#ffa3a3a3"
            android:textSize="14sp"
            />
        
    </LinearLayout>


    <com.noober.background.view.BLButton
        android:id="@+id/btn_share"
        android:layout_marginTop="16dp"
        app:bl_corners_radius="20dp"
        app:bl_solid_color="#1AA764"
        android:layout_gravity="center_horizontal"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:text="分享给好友"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        />




</LinearLayout>