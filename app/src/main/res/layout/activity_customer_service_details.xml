<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/title_bar_default_height"
        android:layout_marginBottom="50dp"
        android:fitsSystemWindows="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.power.fresh.widget.LineTime
                android:id="@+id/line_time"
                android:background="@color/picture_color_white"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>


            <LinearLayout
                android:layout_marginTop="1dp"
                android:background="@color/picture_color_white"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="19dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款总金额"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_tuikuang_jine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共计：12.80"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    />


            </LinearLayout>






            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/public_white"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:drawableLeft="@mipmap/icon_service_rejection_status"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="退款被拒绝，建议修改申请"
                    android:textColor="@color/public_color_333333"
                    android:textSize="@dimen/public_font_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DDDDDD" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:text="若申请被拒绝，您可以尝试修改退款申请或者联系卖家，若6天15时35分10秒内申请未处理，退款申请将达成并退款至您的余额中"
                        android:textColor="@color/public_color_666666"
                        android:textSize="@dimen/public_font_14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="38dp"
                            android:background="@drawable/selector_small_button"
                            android:stateListAnimator="@null"
                            android:text="修改退款申请"
                            android:textColor="@color/public_white"
                            android:textSize="@dimen/public_font_14sp" />

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="38dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/selector_small_button_stroke"
                            android:stateListAnimator="@null"
                            android:text="联系卖家"
                            android:textColor="@color/app_main_body"
                            android:textSize="@dimen/public_font_14sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="商家已同意退款申请，请尽早退货"
                        android:textColor="#AAAAAA"
                        android:textSize="@dimen/public_font_13sp" />

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未与商家协商一致，请勿平邮或到付"
                        android:textColor="#AAAAAA"
                        android:textSize="@dimen/public_font_13sp" />

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="请填写真实物流信息，逾期未填写，退款申请则撤销"
                        android:textColor="#AAAAAA"
                        android:textSize="@dimen/public_font_13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="38dp"
                            android:background="@drawable/selector_small_button"
                            android:stateListAnimator="@null"
                            android:text="填写物流单号"
                            android:textColor="@color/public_white"
                            android:textSize="@dimen/public_font_14sp" />

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="38dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/selector_small_button_stroke"
                            android:stateListAnimator="@null"
                            android:text="联系卖家"
                            android:textColor="@color/app_main_body"
                            android:textSize="@dimen/public_font_14sp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@color/public_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="15dp"
                    android:text="退款信息"
                    android:textColor="@color/public_color_333333"
                    android:textSize="@dimen/public_font_14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tv_dianpu_head"
                        android:layout_marginLeft="15dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/icon_call_up" />


                    <TextView
                        android:id="@+id/tv_dianpu_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/icon_shopping_cart_store_next"
                        android:drawablePadding="8dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="15dp"
                        android:text="店铺名称"
                        android:textColor="@color/public_black"
                        android:textSize="@dimen/public_font_14sp" />
                </LinearLayout>


                <include
                    layout="@layout/layout_adapter_item_customer_service_details_goods_item"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvGoods"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="退款数量："
                            android:textColor="@color/public_color_333333"
                            android:textSize="@dimen/public_font_14sp" />

                        <TextView
                            android:id="@+id/tv_tksl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/public_color_333333"
                            android:textSize="@dimen/public_font_14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="退款原因："
                            android:textColor="@color/public_color_333333"
                            android:textSize="@dimen/public_font_14sp" />

                        <TextView
                            android:id="@+id/tv_tkyy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="不想买了"
                            android:textColor="@color/public_color_333333"
                            android:textSize="@dimen/public_font_14sp" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="退款方式："
                            android:textColor="@color/public_color_333333"
                            android:textSize="@dimen/public_font_14sp" />

                        <TextView
                            android:id="@+id/tv_tkfs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- -"
                            android:textColor="@color/public_color_333333"
                            android:textSize="@dimen/public_font_14sp" />
                    </LinearLayout>



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="退款说明："
                            android:textColor="@color/public_color_333333"
                            android:textSize="@dimen/public_font_14sp" />

                        <TextView
                            android:id="@+id/tv_tksm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- -"
                            android:textColor="@color/public_color_333333"
                            android:textSize="@dimen/public_font_14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="退款单号："
                            android:textColor="@color/public_color_333333"
                            android:textSize="@dimen/public_font_14sp" />

                        <TextView
                            android:id="@+id/tv_tkdh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2018-09-09 12:12"
                            android:textColor="@color/public_color_333333"
                            android:textSize="@dimen/public_font_14sp" />


                        <TextView
                            android:id="@+id/tv_copy"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="复制"
                            android:textColor="#ff056839"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="图片展示："
                        android:textColor="@color/public_color_333333"
                        android:textSize="@dimen/public_font_14sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_certificate"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/public_white"
                        android:nestedScrollingEnabled="false" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/public_white"
        android:gravity="center_vertical">

        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="联系卖家"
                android:textColor="@color/public_color_333333"
                android:textSize="@dimen/public_font_14sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_contact_seller" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#E6E6E6" />

        <LinearLayout
            android:id="@+id/ll_constact_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="联系买家"
                android:textColor="@color/public_color_333333"
                android:textSize="@dimen/public_font_14sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_call_up" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#E6E6E6" />

        <LinearLayout
            android:id="@+id/ll_constact_kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="咨询客服"
                android:textColor="@color/public_color_333333"
                android:textSize="@dimen/public_font_14sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_consulting_customer_service" />
        </LinearLayout>

    </LinearLayout>

    <com.powerrich.common.widget.TitleBar
        android:id="@+id/mTitleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_default_height"
        android:layout_alignParentTop="true"
        app:publicBgColor="@color/app_main_body"
        app:publicShowLeft="true"
        app:publicTextColor="@color/public_white"
        app:publicTitle="@string/activity_customer_service_details_title" />
</RelativeLayout>