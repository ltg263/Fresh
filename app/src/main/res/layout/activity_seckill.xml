<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SeckillActivity">

    <com.powerrich.common.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:publicShowDownLine="true"
        app:publicTitle="@string/home_secktill_title"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="52.5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:saveEnabled="false"
            android:id="@+id/ll_10"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/seckill_titlebar_bg_selector"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_time_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天10:00"
                android:textColor="@drawable/seckill_titlebar_textview_selector"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_end_10"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已结束"
                android:textColor="@drawable/seckill_titlebar_textview_selector"
                android:textSize="14sp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_today_14"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/seckill_titlebar_bg_selector"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_time_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天14:00"
                android:textColor="@drawable/seckill_titlebar_textview_selector"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_end_14"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已结束"
                android:textColor="@drawable/seckill_titlebar_textview_selector"
                android:textSize="14sp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_20"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/seckill_titlebar_bg_selector"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_time_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天20:00"
                android:textColor="@drawable/seckill_titlebar_textview_selector"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_end_20"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已结束"
                android:textColor="@drawable/seckill_titlebar_textview_selector"
                android:textSize="14sp"
                />


        </LinearLayout>

    </RadioGroup>


    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离本场结束"
            android:textColor="#ff313131"
            android:textSize="15sp"
            />


        <TextView
            android:id="@+id/tv_seckill_hour"
            android:background="@drawable/seckill_end_textview_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textColor="@color/public_white"
            android:textSize="14sp"
            android:layout_marginLeft="6dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="#ff8a8a8a"
            android:textSize="15sp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            />

        <TextView
            android:id="@+id/tv_seckill_minute"
            android:background="@drawable/seckill_end_textview_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45"
            android:textColor="@color/public_white"
            android:textSize="14sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="#ff8a8a8a"
            android:textSize="15sp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            />

        <TextView
            android:id="@+id/tv_seckill_second"
            android:background="@drawable/seckill_end_textview_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60"
            android:textColor="@color/public_white"
            android:textSize="14sp"
            />



    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/public_color_eeeeee"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_seckill_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</LinearLayout>