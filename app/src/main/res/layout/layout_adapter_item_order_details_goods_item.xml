<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/iv_shop"
        android:scaleType="fitXY"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/image_view_bg_radius_selector"
        android:src="@mipmap/bg_login" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:background="@color/public_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玉米"
            android:textColor="@color/public_black"
            android:textSize="@dimen/public_font_14sp" />
        <LinearLayout
            android:gravity="bottom"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="规格："
                android:textColor="@color/public_color_999999"
                android:textSize="@dimen/public_font_12sp" />
            <TextView
               android:id="@+id/tv_goods_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="¥12.90/袋"
                android:textColor="@color/public_color_FB0430"
                android:textSize="@dimen/public_font_12sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom|right"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="x1"
            android:textColor="#626061"
            android:textSize="@dimen/public_font_14sp" />


        <com.noober.background.view.BLTextView
            android:id="@+id/tv_tuikuang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="申请退款"
            android:textColor="#626061"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            app:bl_stroke_width="1dp"
            app:bl_stroke_color="#8D8D8D"
            app:bl_corners_radius="3dp"
            android:textSize="@dimen/public_font_12sp" />


    </LinearLayout>
</LinearLayout>
