<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/public_white"
    android:orientation="vertical"
    android:id="@+id/ll_item_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/ll_first_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">





        <TextView
            android:id="@+id/tv_shopping_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="待入库商品"
            android:textColor="@color/public_color_333333"
            android:textSize="@dimen/public_font_14sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="供应商名称:"
            android:textColor="@color/public_color_333333"
            android:textSize="@dimen/public_font_14sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/iv_goods_icon"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/image_view_bg_radius_selector"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_login" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="玉米清脆香甜"
                android:textColor="@color/public_black"
                android:textSize="@dimen/public_font_15sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                 android:layout_marginTop="8dp"

                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_guige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="规格：20斤"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/public_font_13sp" />

                <TextView
                    android:id="@+id/tv_sum"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待入库数量：1"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/public_font_13sp" />





            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/public_color_F2F2F2"
        />


    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ruku_qr_code"
            android:stateListAnimator="@null"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/order_list_status_type_button_selector"
            android:text="入库二维码"
            android:textColor="#FF6C75"
            android:textSize="@dimen/public_font_12sp" />


        <Button
           android:id="@+id/btn_confirm"
            android:stateListAnimator="@null"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/order_list_status_type_button_selector"
            android:text="确认入库"
            android:textColor="#FF6C75"
            android:textSize="@dimen/public_font_12sp" />



    </LinearLayout>


</LinearLayout>