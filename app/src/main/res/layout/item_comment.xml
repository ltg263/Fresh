<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@color/public_white"
        android:orientation="vertical"
        android:paddingLeft="11dp"
        android:paddingRight="11dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <com.noober.background.view.BLImageView
                android:id="@+id/iv_shop_head"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="店"

                android:textColor="#ffffffff"
                android:textSize="20sp"
                app:bl_corners_radius="2dp"
                app:bl_solid_color="#066839" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="9.5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="普通用户"
                    android:textColor="#ff000000"
                    android:textSize="14sp" />



                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/rbar_star"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:numStars="5"

                        android:progressTint="@color/app_main_body"
                        style="?attr/ratingBarStyleSmall"
                        android:layout_height="wrap_content"/>





                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="111"
                    android:textColor="#ff808080"
                    android:textSize="10sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-04-08"
                    android:textColor="#ff808080"
                    android:textSize="9sp" />


            </LinearLayout>


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_comment_chird"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

