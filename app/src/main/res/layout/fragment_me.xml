<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.power.fresh.fragment.MeFragment"
    tools:ignore="MissingPrefix">
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/rl_un_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/me_head_bg"
        >

        <com.power.fresh.widget.CircleImageView
            android:id="@+id/iv_default"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/app_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_default"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_default"
            android:text="未登陆"
            android:textColor="#ffffffff"
            android:textSize="16sp" />
    </RelativeLayout>



</LinearLayout>
