<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/iv_url"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginLeft="8dp"
        android:scaleType="fitXY"
        android:background="@drawable/image_view_bg_radius_selector"
        android:src="@mipmap/bg_login" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:background="@color/public_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玉米清脆香甜"
            android:textColor="@color/public_black"
            android:textSize="@dimen/public_font_16sp" />

        <TextView
            android:id="@+id/tv_specification"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:maxLines="1"
            android:text="规格：约650ｇ"
            android:textColor="@color/public_color_999999"
            android:textSize="@dimen/public_font_14sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:layout_marginBottom="5dp"
            android:text="换货"
            android:textColor="#626061"
            android:textSize="@dimen/public_font_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="30dp"
        android:gravity="bottom|right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="x1"
            android:textColor="#626061"
            android:textSize="@dimen/public_font_14sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="¥12.90"
            android:textColor="@color/public_color_FF5661"
            android:textSize="@dimen/public_font_14sp" />

    </LinearLayout>





</LinearLayout>






