<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="12dp"
    app:bl_solid_color="@color/public_white"
    app:bl_corners_radius="3dp">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:paddingLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/public_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/a_temp_combo"
            />

        <TextView
            android:id="@+id/tv_bank_code"
            android:layout_marginRight="31dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="储蓄卡"
            android:textColor="@color/public_black"
            android:gravity="right"
            android:textSize="12sp"
            />



    </LinearLayout>


    <TextView
        android:id="@+id/tv_bank_no"
        android:layout_marginTop="25dp"
        android:paddingLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6223   ****   ****   6666"
        android:textColor="@color/public_black"
        android:textSize="20sp"
        />



    <com.noober.background.view.BLTextView
        android:id="@+id/tv_unbound"
        app:bl_solid_color="#6F747C"
        app:bl_corners_radius="3dp"
        android:drawablePadding="3dp"
        android:drawableLeft="@mipmap/busy_bank_jiechu"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginLeft="240dp"
        android:gravity="center_vertical"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解除绑定"
        android:textColor="#ffffff"
        android:textSize="10sp"
        />




</com.noober.background.view.BLLinearLayout>






