<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:bl_corners_radius="10dp"
    app:bl_solid_color="@color/public_white">

    <TextView
        android:id="@+id/tv_take_photos"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_horizontal"
        android:paddingTop="7dp"
        android:text="请选择送货方式"
        android:textColor="@color/public_text_gray"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFEDEDED" />

    <TextView
        android:id="@+id/tv_psy"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="配送员配送"
        android:textColor="@color/public_color_0D8CFD"
        android:textSize="15sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFEDEDED" />

    <TextView
        android:id="@+id/tv_wlps"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="物流配送"
        android:textColor="@color/public_color_0D8CFD"
        android:textSize="15sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFEDEDED" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/public_color_007AFF"
        android:textSize="15sp"
        android:textStyle="bold" />
</com.noober.background.view.BLLinearLayout>