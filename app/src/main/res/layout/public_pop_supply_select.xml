<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/public_white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/image_view_bg_radius_selector"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_commodity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="蓝色妖姬"
        android:textColor="@color/public_black"
        app:layout_constraintStart_toEndOf="@+id/iv_head"
        app:layout_constraintTop_toTopOf="@+id/iv_head" />

    <TextView
        android:id="@+id/tv_simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="好看"
        android:textColor="@color/public_color_999999"
        app:layout_constraintStart_toStartOf="@+id/tv_commodity_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_commodity_name" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥699"
        app:layout_constraintStart_toStartOf="@+id/tv_simple"
        app:layout_constraintTop_toBottomOf="@+id/tv_simple" />

    <ImageView
        android:id="@+id/iv_fork"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/input_clear"
         />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="包装规格"
        android:textColor="@color/public_color_333333"
        app:layout_constraintStart_toStartOf="@+id/iv_head"
        app:layout_constraintTop_toBottomOf="@+id/iv_head" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="108dp"
        android:text="购买数量："
        android:textColor="@color/public_color_333333"
        app:layout_constraintStart_toStartOf="@+id/iv_head"
        app:layout_constraintTop_toBottomOf="@+id/iv_head" />

    <TextView
        android:id="@+id/tv_kucun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="72dp"
        android:text="剩余库存：4123"
        android:textColor="@color/public_color_333333"
        app:layout_constraintStart_toStartOf="@+id/iv_head"
        app:layout_constraintTop_toBottomOf="@+id/iv_head" />



    <com.noober.background.view.BLEditText
        android:id="@+id/et_sum"
        app:bl_stroke_color="#D2D2D2"
        app:bl_corners_radius="3dp"
        app:bl_stroke_width="1dp"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:lines="1"
        android:imeOptions="actionDone"
        android:background="@null"
        android:layout_marginRight="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:hint="0"
        android:textSize="14sp"
        android:textColor="@color/public_color_333"
        android:textColorHint="@color/public_color_7b8094"
        android:layout_marginStart="88dp"
        android:layout_marginTop="108dp"
        app:layout_constraintStart_toStartOf="@+id/iv_head"
        app:layout_constraintTop_toBottomOf="@+id/iv_head" />

    <RadioGroup
        android:id="@+id/rv_guige"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@color/public_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/iv_head"
        app:layout_constraintTop_toBottomOf="@+id/iv_head">

        <RadioButton
            android:id="@+id/rb_01"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@drawable/supply_pop_shape"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:button="@null"
            android:textSize="12sp"
            android:text="综合"
            android:textColor="@drawable/supply_pop_selector" />


        <RadioButton
            android:id="@+id/rb_02"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:background="@drawable/supply_pop_shape"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:button="@null"
            android:textSize="12sp"
            android:text="综合"
            android:textColor="@drawable/supply_pop_selector" />


        <RadioButton
            android:id="@+id/rb_03"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:background="@drawable/supply_pop_shape"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:button="@null"
            android:textSize="12sp"
            android:text="综合"
            android:textColor="@drawable/supply_pop_selector" />


    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/public_line_color"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="226dp"
        android:background="@color/public_white"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tv_total_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="right"
            android:text="共0件"
            android:textColor="@color/public_color_333333"
            android:textSize="@dimen/public_font_14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="right"
            android:text="合计:"
            android:textColor="@color/public_color_333333"
            android:textSize="@dimen/public_font_14sp" />


        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:text="￥0.00"
            android:textColor="#E6333B"
            android:textSize="@dimen/public_font_14sp" />

        <Button
            android:id="@+id/btn_settlement"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/settlement_button_selector"
            android:text="确定"
            android:textColor="@color/public_white"
            android:textSize="@dimen/public_font_16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>